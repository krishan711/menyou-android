<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_login">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:background="#55000000"
            tools:context=".LoginActivity">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="32sp"
                android:textColor="#ffffff"
                android:text="Menyou"/>

        <View
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="0dp"/>

            <Button
                    android:id="@+id/btn_login_facebook"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_facebook"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/ic_social_facebook_white"
                    android:text="Sign in"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>

            <Button
                    android:id="@+id/btn_login_google"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_google"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/ic_social_google_white"
                    android:text="Sign in"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="0dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="0dp"/>

            <Button
                    android:id="@+id/btn_create_account"
                    android:layout_width="0dp"
                    android:layout_weight="21"
                    android:layout_height="match_parent"
                    android:background="@drawable/button"
                    android:textColor="#ffffff"
                    android:text="Create Account"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="0dp"/>

        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="0dp"/>

            <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#ff5555"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>

            <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#ff9bff9f"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>

            <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#5555ff"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>

            <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#ffff722c"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="0dp"/>

        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

    </LinearLayout>

</FrameLayout>